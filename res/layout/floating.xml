<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="20dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="80dp"
            android:background="@drawable/left_back"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/app_one_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/imageview_selector"
                android:src="@drawable/ic_launcher" 
                android:gravity="left|center_vertical"/>

            <ImageView
                android:id="@+id/app_two_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/imageview_selector"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/app_three_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/imageview_selector"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/app_four_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/imageview_selector"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/center_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/center_button_selector" />

    <LinearLayout
        android:id="@+id/right_content_ll"
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="20dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="244dp"
            android:layout_height="80dp"
            android:background="@drawable/right_back"
            android:gravity="center_horizontal"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/back_selector" />

            <ImageView
                android:id="@+id/menu_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/menu_selector" />

            <ImageView
                android:id="@+id/home_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/home_selector" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>