                android:id="@+id/app_ten_ll"
                style="@style/iconbutton_ll_size"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"  >

                <ImageView
                    android:id="@+id/app_ten_iv"
                    style="@style/iconbutton_item_size"
                    android:background="@drawable/imageview_selector"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/app_ten_tv"
                    style="@style/iconbutton_tv_size"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/center_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/center_button_selector" />

    <LinearLayout
        android:id="@+id/right_content_ll"
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="20dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="244dp"
            android:layout_height="80dp"
            android:background="@drawable/right_back"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/back_iv"
                style="@style/iconbutton_ll_size"
                android:background="@drawable/back_selector" />

            <ImageView
                android:id="@+id/menu_iv"
                style="@style/iconbutton_ll_size"
                android:background="@drawable/menu_selector" />

            <ImageView
                android:id="@+id/home_iv"
                style="@style/iconbutton_ll_size"
                android:background="@drawable/home_selector" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>