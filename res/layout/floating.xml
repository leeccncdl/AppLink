<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/up_menu_ll"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <cn.zytec.applink.ImageButtonExtend
            android:id="@+id/above_menu_one_iv"
            style="@style/icon_menu_size"
            android:src="@drawable/add"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="275dp"
            android:background="@drawable/imageview_selector" 
            android:visibility="gone"/>

        <cn.zytec.applink.ImageButtonExtend
            android:id="@+id/above_menu_two_iv"
            style="@style/icon_menu_size"
            android:src="@drawable/about"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/imageview_selector"
            android:visibility="gone" />
        <cn.zytec.applink.ImageButtonExtend
            android:id="@+id/above_menu_three_iv"
            style="@style/icon_menu_size"
            android:src="@drawable/quit"
            android:layout_marginTop="42dp"
            android:background="@drawable/imageview_selector"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:background="@drawable/left_back"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <LinearLayout
                    android:id="@+id/app_one_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/app_one_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_one_tv"
                        style="@style/iconbutton_tv_size"
                        android:gravity="center"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_two_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/app_two_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_two_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_three_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/app_three_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_three_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_four_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/app_four_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_four_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_five_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/app_five_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_five_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_six_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/app_six_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_six_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_seven_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/app_seven_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_seven_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_eight_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/app_eight_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_eight_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_nine_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/app_nine_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_nine_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_ten_ll"
                    style="@style/iconbutton_ll_size"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/app_ten_iv"
                        style="@style/iconbutton_item_size"
                        android:background="@drawable/imageview_selector"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/app_ten_tv"
                        style="@style/iconbutton_tv_size"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/center_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/center_button_selector" />

        <LinearLayout
            android:id="@+id/right_content_ll"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:background="@drawable/right_back"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/back_iv"
                    style="@style/iconbutton_ll_size"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/back_selector" />

                <ImageView
                    android:id="@+id/menu_iv"
                    style="@style/iconbutton_ll_size"
                    android:background="@drawable/menu_selector" />

                <ImageView
                    android:id="@+id/home_iv"
                    style="@style/iconbutton_ll_size"
                    android:background="@drawable/home_selector" />
<!-- 
                <ImageView
                    android:id="@+id/quit"
                    style="@style/iconbutton_ll_size"
                    android:src="@drawable/quit" />  -->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/down_menu_ll"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <cn.zytec.applink.ImageButtonExtend
            android:id="@+id/beneath_menu_one_iv"
            style="@style/icon_menu_size"
            android:src="@drawable/down1"
            android:layout_marginLeft="275dp"
            android:background="@drawable/imageview_selector" 
            android:visibility="gone"/>

        <cn.zytec.applink.ImageButtonExtend
            android:id="@+id/beneath_menu_two_iv"
            style="@style/icon_menu_size"
            android:src="@drawable/down2"
            android:layout_marginTop="32dp" 
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/imageview_selector"
            android:visibility="gone" />

        <cn.zytec.applink.ImageButtonExtend
            android:id="@+id/beneath_menu_three_iv"
            style="@style/icon_menu_size"
            android:src="@drawable/down3"
            android:background="@drawable/imageview_selector"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>