<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/left_back"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/app_one_ll"
                style="@style/iconbutton_ll_size"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/app_one_iv"
                    style="@style/iconbutton_item_size"
                    android:background="@drawable/imageview_selector"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/app_one_tv"
                    style="@style/iconbutton_tv_size"
                    android:gravity="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_two_ll"
                style="@style/iconbutton_ll_size"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/app_two_iv"
                    style="@style/iconbutton_item_size"
                    android:background="@drawable/imageview_selector"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/app_two_tv"
                    style="@style/iconbutton_tv_size"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_three_ll"
                style="@style/iconbutton_ll_size"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/app_three_iv"
                    style="@style/iconbutton_item_size"
                    android:background="@drawable/imageview_selector"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/app_three_tv"
                    style="@style/iconbutton_tv_size"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_four_ll"
                style="@style/iconbutton_ll_size"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/app_four_iv"
                    style="@style/iconbutton_item_size"
                    android:background="@drawable/imageview_selector"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/app_four_tv"
                    style="@style/iconbutton_tv_size"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/app_five_ll"
                style="@style/iconbutton_ll_size"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/app_five_iv"
                    style="@style/iconbutton_item_size"
                    android:background="@drawable/imageview_selector"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/app_five_tv"
                    style="@style/iconbutton_tv_size"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
